<%  if signed_in? %>
	<div class="row">
		<aside class="span3">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/stats' %>
			</section>
			<section>
				<%= render 'shared/micropost_form' %>
			</section>
		</aside>
		<div class="span5">
			<h3>Feed</h3>
			<%= render 'shared/feed' %>
		</div>
		<div class="span4">
			<h3>Map</h3>
			<%= render 'locations/location_index' %>
		</div>
	</div>


<% else %>
	<div class="center hero-unit">
		<%= image_tag("SEETHRU.png", alt: "HearBy", class: "main_logo") %><h1>Welcome to HearBy</h1>
		<h2>
			Sign in or sign up!
		</h2>
	
		<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
	</div>

<% end %>
